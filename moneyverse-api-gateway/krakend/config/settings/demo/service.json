{
  "port": 8080,
  "environment": "Demo",
  "service_name": "Moneyverse KrakenD API GATEWAY",
  "default_host": "ignore",
  "timeout": "3s",
  "cache_ttl": "60s",
  "output_encoding": "json",
  "extra_config": {
    "telemetry/logging": {
      "level": "INFO",
      "prefix": "[KRAKEND]",
      "syslog": false,
      "stdout": true,
      "format": "default"
    },
    "router": {
      "auto_options": true,
      "return_error_msg": true
    },
    "security/cors": {
      "allow_origins": [
        "*"
      ],
      "allow_methods": [
        "GET",
        "POST",
        "PUT",
        "DELETE",
        "PATCH"
      ],
      "allow_headers": [
        "*"
      ],
      "expose_headers": [
        "*"
      ],
      "max_age": "12h",
      "allow_credentials": true,
      "debug": true
    }
  },
  "backend": {
    "hosts": {
      "currency_management": "http://host.docker.internal:8090",
      "user_management": "http://host.docker.internal:8091",
      "account_management": "http://host.docker.internal:8092",
      "budget_management": "http://host.docker.internal:8093",
      "transaction-management": "http://host.docker.internal:8094",
      "analytics": "http://host.docker.internal:8095"
    }
  }
}